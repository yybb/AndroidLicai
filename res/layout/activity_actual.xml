            android:text="" 
            android:textSize="25dip"
            android:gravity="center"/>
            
        </TableRow>
        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
            android:id="@+id/fjtextView11"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="" 
            android:textSize="25dip"
            android:gravity="center"/>
            
            <TextView
            android:id="@+id/fjtextView12"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="" 
            android:textSize="25dip"
            android:gravity="center"/>
            
            <TextView
            android:id="@+id/fjtextView13"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="" 
            android:textSize="25dip"
            android:gravity="center"/>
            
        </TableRow>
        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
            android:id="@+id/fjtextView14"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="" 
            android:textSize="25dip"
            android:gravity="center"/>
            
            <TextView
            android:id="@+id/fjtextView15"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="" 
            android:textSize="25dip"
            android:gravity="center"/>
            
            <TextView
            android:id="@+id/fjtextView16"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="" 
            android:textSize="25dip"
            android:gravity="center"/>
            
        </TableRow>

        
    </TableLayout>
    
</LinearLayout>

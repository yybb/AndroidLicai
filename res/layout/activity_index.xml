<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".IndexActivity" >

    <TextView
        android:id="@+id/text_index_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="今日财政情况"
        android:textSize="25dip" />

    <Button
        android:id="@+id/button_index_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/title_bg"
        android:text="历史开销"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_index_actual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_index_history"
        android:layout_alignLeft="@+id/button_index_history"
        android:layout_marginBottom="16dp"
        android:background="@drawable/title_bg"
        android:text="实际收支"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_index_plan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_index_actual"
        android:layout_alignLeft="@+id/button_index_actual"
        android:layout_marginBottom="18dp"
        android:background="@drawable/title_bg"
        android:text="计划收支"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_index_expense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_index_title"
        android:layout_below="@+id/text_index_title"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="支出"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/text_index_income"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_index_expense"
        android:layout_alignBottom="@+id/text_index_expense"
        android:layout_alignLeft="@+id/text_index_expense"
        android:gravity="right"
        android:text="收入"
        android:textSize="20dip" />


    <TextView
        android:id="@+id/text_index_actual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_index_expense"
        android:layout_below="@+id/text_index_expense"
        android:layout_marginTop="76dp"
        android:gravity="left"
        android:text="实际"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/text_index_plan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_index_expense"
        android:layout_below="@+id/text_index_expense"
        android:layout_marginTop="26dp"
        android:gravity="left"
        android:text="计划"
        android:textSize="20dip" />
    
    <TextView 
        android:id="@+id/text_index_plan_expense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/text_index_plan"
        android:layout_alignBottom="@id/text_index_plan"
        android:layout_alignLeft="@id/text_index_plan"
        android:gravity="center"
        android:textSize="20dip"/>
    
    <TextView 
        android:id="@+id/text_index_plan_income"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/text_index_plan"
        android:layout_alignBottom="@id/text_index_plan"
        android:layout_alignLeft="@id/text_index_plan"
        android:gravity="right"
        android:textSize="20dip"/>
    
    <TextView 
        android:id="@+id/text_index_actual_expense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/text_index_actual"
        android:layout_alignBottom="@id/text_index_actual"
        android:layout_alignLeft="@id/text_index_actual"
        android:gravity="center"
        android:textSize="20dip"/>
    
    <TextView 
        android:id="@+id/text_index_actual_income"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/text_index_actual"
        android:layout_alignBottom="@id/text_index_actual"
        android:layout_alignLeft="@id/text_index_actual"
        android:gravity="right"
        android:textSize="20dip"/>

</RelativeLayout>